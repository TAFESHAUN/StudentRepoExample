<Window x:Class="StudentRepoExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentRepoExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="1600">
    <Grid>

        <!-- CSV OFF
        <DataGrid x:Name="studentDG" AutoGenerateColumns="True" IsReadOnly="True" Margin="30,68,30,704" FontSize="24"/>
        <Label Content="CSV Info" HorizontalAlignment="Left" Margin="30,28,0,0" VerticalAlignment="Top" Width="171" FontSize="24"/>
        -->

        <DataGrid x:Name="studentDG2" AutoGenerateColumns="True" IsReadOnly="True"
                  Margin="30,94,30,545" FontSize="24"
                  SelectionChanged="studentDG2_SelectionChanged"/>
        <Label Content="Database Info" HorizontalAlignment="Left" Margin="30,28,0,0"
               VerticalAlignment="Top" Width="240" FontSize="24"/>

        <Button Content="ADD NEW STUDENT" HorizontalAlignment="Left" Margin="1442,683,0,0"
                VerticalAlignment="Top" Height="52" Width="128" Click="Add_Student"/>

        <!-- CRUD -->
        <Button Content="UPDATE SELECTED" HorizontalAlignment="Left" Margin="1442,745,0,0"
                VerticalAlignment="Top" Height="52" Width="128" Click="Update_Student"/>
        <Button Content="DELETE SELECTED" HorizontalAlignment="Left" Margin="1442,807,0,0"
                VerticalAlignment="Top" Height="52" Width="128" Click="Delete_Student"/>

        <TextBox x:Name="StudentName" HorizontalAlignment="Left" Margin="560,687,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Height="44" Text="Name"/>
        <TextBox x:Name="StudentAge" HorizontalAlignment="Left" Margin="882,685,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Height="44" Text="Age"/>
        <TextBox x:Name="StudentYear" HorizontalAlignment="Left" Margin="1015,685,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Height="44" Text="Year"/>
        <TextBox x:Name="StudentSport" HorizontalAlignment="Left" Margin="1155,683,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="111" Height="44" Text="Sports"/>
    </Grid>
</Window>
